<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:background="@color/light_grey"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/activity_horizontal_padding">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="0dp"
        android:layout_height="@dimen/small_artwork"
        android:layout_weight="1"
        android:contentDescription="@string/artwork_desc"
        tools:src="@drawable/artworkperfect" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_padding"
        android:paddingStart="@dimen/activity_horizontal_padding">

        <TextView
            android:id="@+id/artistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/artist_name"
            tools:text="Ed Sheeran" />

        <TextView
            android:id="@+id/songName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_song_name"
            tools:text="Perfect" />
    </LinearLayout>

    <ImageView
        android:id="@+id/play_list"
        android:layout_width="@dimen/play_button"
        android:layout_height="@dimen/play_button"
        android:contentDescription="@string/play_button_desc"
        android:src="@drawable/play_arrow" />

</LinearLayout>