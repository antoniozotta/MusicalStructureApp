<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for a category of music -->
    <style name="PopCategoryStyle">
        <item name="android:background">@color/category_pop</item>
        <item name="android:drawableLeft">@drawable/mic</item>
        <item name="android:drawableStart">@drawable/mic</item>
        <item name="android:drawablePadding">@dimen/small_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:layout_margin">@dimen/marginSmall_np</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="RapCategoryStyle">
        <item name="android:background">@color/category_rap</item>
        <item name="android:drawableLeft">@drawable/rap</item>
        <item name="android:drawablePadding">@dimen/small_padding</item>
        <item name="android:drawableStart">@drawable/rap</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:layout_margin">@dimen/marginSmall_np</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="t80sCategoryStyle">
        <item name="android:background">@color/category_80s</item>
        <item name="android:drawableLeft">@drawable/cassette</item>
        <item name="android:drawableStart">@drawable/cassette</item>
        <item name="android:drawablePadding">@dimen/small_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:layout_margin">@dimen/marginSmall_np</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

</resources>
